{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  
  // Chúng ta thêm "src/aframe.d.ts" vào đây để đảm bảo
  // trình biên dịch 'tsc' luôn đọc nó khi build.
  "include": ["src", "src/aframe.d.ts"],
  
  "references": [{ "path": "./tsconfig.node.json" }]
}