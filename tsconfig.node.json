{
  "compilerOptions": {
    // THÊM DÒNG NÀY để sửa lỗi TS6306
    "composite": true,

    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.node.tsbuildinfo",
    "skipLibCheck": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "strict": true

    // Chúng ta KHÔNG ĐẶT "noEmit": true ở đây
    // để sửa lỗi TS6310
  },
  "include": ["vite.config.ts"]
}